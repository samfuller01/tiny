{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single"],
		"func-style": [
			"error",
			"declaration",
			{
				"allowArrowFunctions": true
			}
		]
	}
}
